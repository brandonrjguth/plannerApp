<head>
    <link type="text/css" href="css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>

   
    <div class="container">
        <div class="d-flex flex-row justify-content-center text-center">
          <div class="w-25">
            <button class='btn-primary btn d-flex mr-auto'><a href='/index' style='color:white'>Home</a></button>
            <button class='mt-2 btn-primary btn d-flex mr-auto'><a href='/index/<%=master%>' style='color:white'>Lists</a></button>
          </div>
          <div class="w-30">
            <h1><%=wtf%></h1>
            <h5><%=parentList%></h5>
            Add a List Item.
            <form class='mt-3' action=/listItems method="POST">
                <input type="text" name="name">
                <button>
                    Submit!
                </button>
            </form>



            <% for (i=0; i<listItems.length; i++){%>
            <div class='d-flex pb-2 pt-2'>
                <li class='mr-auto' id='<%=listItems[i].name%>'><%=listItems[i].name%></li>
                <form id="<%=listItems[i].name%>1" method="post" style='display:none' action="/listItems/delete/<%=listItems[i].name%>">
                <input type="hidden">
                </form>
                <button class='btn btn-primary mr-2' onclick='document.getElementById("<%=listItems[i].name%>1").submit()'>Delete</button>
                <button class='btn btn-primary' onclick='document.getElementById("<%=listItems[i].name%>").style.setProperty("text-decoration", "line-through");'>Finish</button>        
            </div>
            <%};%>

         
        
          </div>
          <div class="w-25">
           
          </div>
        </div>
      </div>
    

