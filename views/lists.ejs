<html>

<head>
    <link type="text/css" href="css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>

    <div class="container">
        <div class="d-flex flex-row justify-content-center text-center">
          <div class="w-25">
              
         <button class='btn-primary btn d-flex mr-auto'><a href='/index' style='color:white'>Home</a></button>
          </div>
          <div class="w-30">
            <h1><%=master%></h1>
            Add a List
            <form class='mt-3' action=/lists method="POST">
                <input type="text" name="name">
                <button>
                    Submit!
                </button>
            </form>



            <% for (i=0; i<lists.length; i++){%>
            <div class='d-flex pb-2 pt-2'>
                <a class='mr-auto' href="/index/<%=wtf%>/<%=lists[i].name%>"><%=lists[i].name%></a>
                <form id="<%=lists[i].name%>" method="post" style='display:none' action="/lists/delete/<%=lists[i].name%>">
                <input type="hidden">
                </form>
            <button class='btn btn-primary btn-sm text-right ml-auto' onclick='document.getElementById("<%=lists[i].name%>").submit()'>Delete</button>   
            </div>
            <%};%>

         
        
          </div>
          <div class="w-25">
           
          </div>
        </div>
      </div>
    




</body>


</html>